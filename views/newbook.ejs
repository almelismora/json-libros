    <title>Add a New Book</title>
</head>
<body>
    <%- include('partials/header.ejs') %> 
    <p>add a new book</p>
    <form action="/addbook" method="post" class="container">
        <h3 class="card-title">Add News</h3>
            <div class="form-group">
                <input name="title" type="text" class="form-control" placeholder="Title" autofocus="autofocus">
